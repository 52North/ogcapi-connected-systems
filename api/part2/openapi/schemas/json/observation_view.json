{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    { "$ref": "observation.json" },
    { 
      "required": [
        "id",
        "phenomenonTime",
        "resultTime"
      ]
    },
    {
      "oneOf": [
        {
          "title": "Datastream ID",
          "required": ["datastream@id"]
        },
        {
          "title": "Link to datastream",
          "required": ["datastream@link"]
        }
      ]
    },
    {
      "oneOf": [
        {
          "title": "Sampling feature ID",
          "required": ["samplingFeature@id"]
        },
        {
          "title": "Link to sampling feature",
          "required": ["samplingFeature@link"]
        }
      ]
    },
    {
      "oneOf": [
        {
          "title": "Procedure ID",
          "required": ["procedure@id"]
        },
        {
          "title": "Link to procedure",
          "required": ["procedure@link"]
        }
      ]
    },
    {
      "oneOf": [
        {
          "title": "Inline result",
          "required": ["result"]
        },
        {
          "title": "Link to result",
          "required": ["result@links"]
        }
      ]
    }
  ]
}