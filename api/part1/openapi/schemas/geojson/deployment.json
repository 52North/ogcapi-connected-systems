{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    { "$ref": "feature.json" },
    {
      "properties": {
        "properties": {
          "required": [ "validTime" ],
          "properties": {
            "featureType": {
              "const": "http://www.w3.org/ns/ssn/Deployment"
            },
            "validTime": {
              "description": "Time period during which the systems are deployed.",
              "$ref": "../common/commonDefs.json#/definitions/TimePeriod"
            }
          }
        }
      }
    }
  ]
}