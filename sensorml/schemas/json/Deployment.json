{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    { "$ref": "DescribedObject.json" },
    {
      "properties": {
        "type": {
          "const": "Deployment"
        },
        "definition": {
          "description": "Type of deployment (semantic link)",
          "type": "string",
          "format": "uri"
        },
        "location": {
          "description": "The deployment location or area",
          "$ref": "https://geojson.org/schema/Geometry.json"
        },
        "platform": {
          "description": "Link to the platform that the systems are deployed on",
          "$ref": "commonDefs.json#/definitions/XLink"
        },
        "deployedSystems": {
          "description": "The list of deployed systems",
          "type": "array",
          "items": {
            "$ref": "DeployedSystem.json"
          }
        }
      }
    }
  ]
}